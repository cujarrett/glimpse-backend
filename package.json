{
  "name": "glimpse-backend",
  "version": "0.4.0",
  "description": "Backend for glimpse.ninja app",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "fix-lint": "eslint . --fix",
    "test": "nyc --reporter=lcov tape test/**/*.js | tap-spec && nyc report",
    "build": "npm install --production && rm -rf build && mkdir build && zip -r -q -x='*test*' -x='package-lock.json' -x='*media*' -x='*terraform*' -x=*coverage* -x='*.md' -x='LICENSE' -x='*build*' -x='*.DS_Store*' -x='*.git*' -x='release.config.js' -x='commitlint.config.js' build/glimpse-backend.zip . && du -sh build",
    "deploy": "aws lambda update-function-code --function-name=glimpse-backend --zip-file=fileb://build/glimpse-backend.zip --region=us-east-1 1> /dev/null",
    "semantic-release": "semantic-release",
    "ci": "npm run lint && npm run test",
    "cd": "npm run build && npm run deploy"
  },
  "contributors": [
    {
      "name": "Matt Jarrett",
      "web": "https://mattjarrett.dev"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cujarrett/glimpse-backend.git"
  },
  "author": "Matt Jarrett",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cujarrett/glimpse-backend/issues"
  },
  "homepage": "https://github.com/cujarrett/glimpse-backend#readme",
  "dependencies": {
    "lambda-api": "~0.10.7",
    "node-fetch": "~2.6.1"
  },
  "devDependencies": {
    "@commitlint/cli": "~12.1.4",
    "@commitlint/config-conventional": "~12.1.4",
    "@semantic-release/changelog": "~5.0.1",
    "@semantic-release/commit-analyzer": "~8.0.1",
    "@semantic-release/exec": "~5.0.0",
    "@semantic-release/git": "~9.0.0",
    "@semantic-release/github": "~7.2.3",
    "@semantic-release/npm": "~7.1.3",
    "@semantic-release/release-notes-generator": "~9.0.3",
    "commitizen": "~4.2.4",
    "cz-conventional-changelog": "~3.3.0",
    "eslint": "~7.28.0",
    "husky": "~4.3.8",
    "nyc": "~15.1.0",
    "semantic-release": "^17.4.3",
    "tap-spec": "~5.0.0",
    "tape-async": "~2.3.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
